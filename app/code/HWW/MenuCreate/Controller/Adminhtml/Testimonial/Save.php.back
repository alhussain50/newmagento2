<?php

namespace HWW\MenuCreate\Controller\Adminhtml\ItemRepository;

use HWW\MenuCreate\Model\ItemFactory;

class Save extends \Magento\Backend\App\Action
{
    private $itemFactory;

    public function __construct(
        \Magento\Backend\App\Action\Context $context,
        ItemFactory $itemFactory
    ) {
        // $this->itemFactory = $itemFactory;
        parent::__construct($context);
    }

    public function execute()
    {
        $this->_view->loadLayout();
        $this->_view->renderLayout();

        $contactDatas = $this->getRequest()->getParam('general');
        if(is_array($contactDatas)) {
            $contact = $this->_objectManager->create(Contact::class);
            $contact->setData($contactDatas)->save();
            $resultRedirect = $this->resultRedirectFactory->create();
            return $resultRedirect->setPath('menucreate/create/index');
        }
        // $this->itemFactory->create()
        //     ->setData($this->getRequest()->getPostValue()['general'])
        //     ->save();
        // return $this->resultRedirectFactory->create()->setPath('menucreate/create/index');
    }
}
